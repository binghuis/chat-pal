{
  "name": "syncia",
  "displayName": "Syncia",
  "version": "0.0.5",
  "description": "A simple chrome extension for interacting with ChatGPT with in your comfort",
  "repository": {
    "type": "git",
    "url": "https://github.com/Royal-lobster/Syncia.git"
  },
  "author": "Royal-lobster",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "release": "publish-extension --chrome-zip \"dist/chrome.zip\" --chrome-extension-id \"$CHROME_EXTENSION_ID\" --chrome-client-id \"$CHROME_CLIENT_ID\" --chrome-client-secret \"$CHROME_CLIENT_SECRET\" --chrome-refresh-token \"$CHROME_REFRESH_TOKEN\"",
    "release:cli": "source .env && publish-extension --chrome-zip \"dist/chrome.zip\" --chrome-extension-id \"$CHROME_EXTENSION_ID\" --chrome-client-id \"$CHROME_CLIENT_ID\" --chrome-client-secret \"$CHROME_CLIENT_SECRET\" --chrome-refresh-token \"$CHROME_REFRESH_TOKEN\"",
    "format": "rome format . --write",
    "lint": "rome check .",
    "flush": "rm -rf artifacts/ dist/",
    "lint:fix": "yarn lint --apply"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-switch": "^1.0.3",
    "axios": "^1.4.0",
    "dnd-kit-sortable-tree": "^0.1.62",
    "endent": "^2.1.0",
    "publish-browser-extension": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-highlight-menu": "^1.0.4",
    "react-icons": "^4.9.0",
    "react-markdown": "^8.0.7",
    "react-syntax-highlighter": "^15.5.0",
    "react-textarea-autosize": "^8.4.1",
    "redirect-whitelister": "^1.0.0",
    "rehype-raw": "^6.1.1",
    "remark-breaks": "^3.0.3",
    "remark-gfm": "^3.0.1",
    "sse": "github:mpetazzoni/sse.js",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@crxjs/vite-plugin": "^2.0.0-beta.15",
    "@types/chrome": "^0.0.237",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.9",
    "@types/react-dom": "^18.2.4",
    "@types/react-syntax-highlighter": "^15.5.7",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "rome": "12.1.3",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-zip-pack": "^1.0.5"
  }
}
